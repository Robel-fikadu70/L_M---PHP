{
    "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/tile-formatting.schema.json",
    "hideSelection": true,
    "width": "200",
    "height": "300",
    "formatter": {
      "elmType": "div",
      "style": {
        "width": "200px",
        "background-color": "#2A2A2A",
        "border-radius": "12px",
        "overflow": "hidden",
        "text-align": "center",
        "color": "white",
        "box-shadow": "0px 5px 15px rgba(0, 0, 0, 0.5)"
      },
      "children": [
        {
          "elmType": "img",
          "attributes": {
            "src": "[$ImageUrl]",
            "alt": "Product Image"
          },
          "style": {
            "width": "100%",
            "height": "120px",
            "object-fit": "cover"
          }
        },
        {
          "elmType": "div",
          "style": {
            "padding": "10px"
          },
          "children": [
            {
              "elmType": "p",
              "txtContent": "[$Title]",
              "style": {
                "font-size": "14px",
                "font-weight": "bold",
                "text-transform": "uppercase",
                "margin": "5px 0"
              }
            },
            {
              "elmType": "p",
              "txtContent": "$[$Price]",
              "style": {
                "font-size": "18px",
                "font-weight": "bold",
                "color": "#00FF99",
                "margin": "5px 0"
              }
            },
            {
              "elmType": "p",
              "txtContent": "[$Description]",
              "style": {
                "font-size": "10px",
                "opacity": "0.7",
                "margin": "5px 0"
              }
            }
          ]
        }
      ]
    }
  }
  